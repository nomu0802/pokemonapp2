<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/droww">

    <ImageView
        android:id="@+id/hoge_image_view"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hoge_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="hogeTitle"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/hoge_image_view"
        app:layout_constraintTop_toTopOf="@id/hoge_image_view" />

    <TextView
        android:id="@+id/pokeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/hoge_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shtypevi"
        android:layout_width="69dp"
        android:layout_height="27dp"

        android:layout_marginTop="5dp"
        android:background="@drawable/type1"
        app:layout_constraintStart_toStartOf="@+id/hoge_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/hoge_title_text_view" />

    <TextView
        android:id="@+id/hoge_contents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FFFF"
        android:textSize="12sp"

        app:layout_constraintBottom_toBottomOf="@+id/shtypevi"
        app:layout_constraintEnd_toEndOf="@+id/shtypevi"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/shtypevi"
        app:layout_constraintTop_toTopOf="@+id/shtypevi"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/shtypevi2"
        android:layout_width="69dp"
        android:layout_height="27dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/type1"
        app:layout_constraintStart_toEndOf="@+id/shtypevi"
        app:layout_constraintTop_toBottomOf="@+id/hoge_title_text_view" />

    <TextView
        android:id="@+id/typesorch2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shtypevi2"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toEndOf="@+id/shtypevi"
        app:layout_constraintStart_toStartOf="@+id/shtypevi2"
        app:layout_constraintTop_toTopOf="@+id/shtypevi2"
        app:layout_constraintVertical_bias="0.592" />

</androidx.constraintlayout.widget.ConstraintLayout>