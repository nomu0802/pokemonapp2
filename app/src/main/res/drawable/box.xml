<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <padding android:top="35dp"/>
            <size android:width="200dp" android:height="40dp" />
            <solid android:color="#6E6E6E" />
        </shape>
    </item>
    <!-- Darker colored line-->



    <!-- This rectangle for the right side -->
    <!-- Their color should be the same as layout's background -->
    <item
        android:right="200dp"
        android:left="-200dp"
        android:top="-200dp"
        android:bottom="-200dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <padding android:top="-35dp"/>
                <solid android:color="#A13030" />
            </shape>
        </rotate>
    </item>
    <!-- This rectangle for the left side -->

</layer-list>